<aside class=" sm:w-full sm:h-24 lg:w-80 lg:h-full">
    <div style="height: 20rem; overflow: scroll; border: red 1px solid;">
      <h3 style="font-weight: bolder;">Available to Select</h3>
      <div id="categoryFilters">
        {{#each categories as |category|}}
          <p>{{category}}</p>
        {{/each}}
      </div>
      <div id="colorFilters">
        {{#each colors as |color|}}
          <p>{{color}}</p>
        {{/each}}
      </div>
      <h3 style="font-weight: bolder;">Selected</h3>
      <div id="selectedCategoryFilters"></div>
      <div id="selectedColorFilters"></div>
    </div>


    <div class="line">
        {{!-- <div class="flex flex-wrap justify-around pt-1 md:pt-2 lg:grid-col lg:space-y-64"> --}}
        <div class=" flex flex-wrap justify-evenly pt-1 md:pt-2 lg:grid-col">
            <div class="mb-3 w-1/5 lg:w-64">
                <p class="font-dosis text-lg lg:mb-3">Categories</p>
                <select class="form-select appearance-none block w-full px-3 py-1.5 font-dosis font-normal text-gray-700 bg-white bg-clip-padding bg-no-repeat border border-solid border-gray-300
                rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-zinc-600 focus:outline-none" aria-label="Default select example">
                    <option selected>Select one</option>
                    <option value="1">Bakeware</option>
                    <option value="2">Bowls</option>
                    <option value="3">Plates</option>
                    <option value="3">Cups, Mugs, and Saucers</option>
                </select>
            </div>
            <div class="mb-3 w-1/5 lg:w-64">
                <p class="font-dosis text-lg lg:mb-3">Color</p>
                <select class="form-select appearance-none block w-full px-3 py-1.5 font-dosis font-normal text-gray-700 bg-white bg-clip-padding bg-no-repeat border border-solid border-gray-300
                rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-zinc-600 focus:outline-none" aria-label="Default select example">
