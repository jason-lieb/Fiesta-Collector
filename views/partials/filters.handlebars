<aside id="filters" class='sm:w-full'>
  <div class='text-center lg:text-left'>
    <div class=' flex flex-wrap justify-evenly pt-1 md:pt-2 lg:grid-col ml-5'>
      <div class='mb-3 w-1/5 lg:w-64'>
        <p class='font-dosis text-lg lg:mb-3'>Categories</p>
        <ul id='categoryFilters'>
          {{#each categories as |category|}}
            <li>{{category}}</li>
          {{/each}}
        </ul>
        <br>
        <ul id='selectedCategoryFilters'></ul>
      </div>
      {{#if home}}
        <div class='mb-3 w-1/5 lg:w-64'>
          <p class='font-dosis text-lg lg:mb-3'>Color</p>
          <ul id='colorFilters'>
            {{#each colors as |color|}}
              <li>{{color}}</li>
            {{/each}}
          </ul>
          <br>
          <div id='selectedColorFilters'></div>
        </div>
        <div class='mb-3 w-1/5 lg:w-64'>
          <p class='font-dosis text-lg lg:mb-3'>Item</p>
          <ul id='itemFilters'>
            {{#each items as |item|}}
              <li>{{item}}</li>
            {{/each}}
          </ul>
          <br>
          <div id='selectedItemFilters'></div>
        </div>
      {{/if}}
