
<div id='card' class='container border-2 border-zinc-600 w-64 rounded relative' data-qty="{{quantity}}" data-color="{{color_name}}" data-category="{{category_name}}" data-item="{{item_name}}" data-id="{{id}}">
  {{#if item_has_pic}}
    <img src='/img/items/{{item_id}}.webp' alt='dish' class='img w-[270px] h-[270px]'>
  {{else}}
    <img src='/img/items/image_not_available.png' alt='not available' class='img w-[270px] h-[270px]'>
  {{/if}}
  <div class='text-center grid grid-rows-3 bg-zinc-600 text-white'>
      <p class='font-dosis text-xl '>{{item_name}}</p>
      <p class='font-dosis text-xl '>{{color_name}}</p>
      <p class='font-dosis text-xl'>Quantity: {{quantity}}</p>
  </div>
  <i class='edit fa-solid fa-pen-to-square text-white absolute right-1 bottom-1 hover:text-orange-400'></i>
</div>

